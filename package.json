{
  "name": "nice-backend",
  "version": "1.0.0",
  "description": "A nice backend scaffold",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --watch ./src www.dev.ts",
    "prod": "ts-node www.prod.ts",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix --runInBand",
    "test": "jest --forceExit --runInBand",
    "test:debug-promise": "jest --detectOpenHandles",
    "docs:ts": "typedoc --out docs src",
    "add-superuser": "ts-node addSuperuser.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/argon2": "^0.15.0",
    "@types/connect-mongo": "^3.0.0",
    "@types/dompurify": "^2.0.0",
    "@types/express": "^4.17.2",
    "@types/express-session": "^1.15.16",
    "@types/express-validator": "^3.0.0",
    "@types/helmet": "0.0.45",
    "@types/mongoose": "^5.5.32",
    "@types/nconf": "^0.10.0",
    "@types/passport": "^1.0.2",
    "@types/passport-local": "^1.0.33",
    "argon2": "^0.25.1",
    "connect-mongo": "^3.2.0",
    "dompurify": "^2.0.7",
    "express": "^4.17.3",
    "express-session": "^1.17.0",
    "express-validator": "^6.3.0",
    "helmet": "^3.21.2",
    "mongoose": "^5.7.13",
    "mysql": "^2.17.1",
    "nconf": "^0.10.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/supertest": "^2.0.8",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "supertest": "^4.0.2",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.2",
    "ts-jest": "^24.2.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typedoc": "^0.15.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/docs/",
      "/config/"
    ]
  }
}
